<Window x:Class="SimpleCM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleCM.Data"
        mc:Ignorable="d"
        ResizeMode="NoResize" 
        Title="合同管理" Height="600" Width="800">
    <Window.Resources>

        <local:Contracts x:Key="Contracts"/>

        <Style TargetType="ListBoxItem">
            <Setter Property="FontFamily" Value="Verdana"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Padding" Value="10"/>
        </Style>

        <DataTemplate x:Key="DetailTemplate">

            <Border Width="300" Height="100" Margin="20"

              BorderBrush="Aqua" BorderThickness="1" Padding="8">

                <Grid>
                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Path=ContractName}"/>
                </Grid>

            </Border>

        </DataTemplate>



    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>


            <StackPanel Grid.Row="1">
                <TextBlock FontFamily="Verdana" FontSize="11"
                            Margin="5,15,0,10" FontWeight="Bold">合同列表</TextBlock>

                <ListBox Width="200" IsSynchronizedWithCurrentItem="True"

                        ItemsSource="{Binding Source={StaticResource Contracts}}"/>

                <TextBlock FontFamily="Verdana" FontSize="11"

               Margin="5,15,0,5" FontWeight="Bold">Information:</TextBlock>

                <ContentControl Content="{Binding Source={StaticResource Contracts}}"

                    ContentTemplate="{StaticResource DetailTemplate}"/>

            </StackPanel>
        </Grid>

        <Grid Grid.Column="1" >
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <Button Grid.Row="0" Content="添加新合同" HorizontalAlignment="Left" Height="32" Margin="10,10,0,10" VerticalAlignment="Center" Width="106"/>
            <StackPanel Grid.Row="1">
            </StackPanel>
        </Grid>

    </Grid>
</Window>
